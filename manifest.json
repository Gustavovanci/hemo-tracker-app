{
  "name": "HemoFlow - Sistema Avançado de Analytics Hemodinâmico",
  "short_name": "HemoFlow",
  "description": "Sistema disruptivo para tracking, analytics preditivos e otimização de fluxo em Hemodinâmica com IA integrada e insights em tempo real.",
  "version": "3.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",

  "theme_color": "#1e1b4b",
  "background_color": "#667eea",

  "categories": [
    "medical",
    "healthcare",
    "productivity",
    "analytics",
    "business"
  ],

  "icons": [
    { "src": "icons/icon-72x72.png",  "sizes": "72x72",  "type": "image/png", "purpose": "any" },
    { "src": "icons/icon-96x96.png",  "sizes": "96x96",  "type": "image/png", "purpose": "any" },
    { "src": "icons/icon-128x128.png","sizes": "128x128","type": "image/png", "purpose": "any" },
    { "src": "icons/icon-144x144.png","sizes": "144x144","type": "image/png", "purpose": "any" },
    { "src": "icons/icon-152x152.png","sizes": "152x152","type": "image/png", "purpose": "any" },
    { "src": "icons/icon-192x192.png","sizes": "192x192","type": "image/png", "purpose": "any maskable" },
    { "src": "icons/icon-384x384.png","sizes": "384x384","type": "image/png", "purpose": "any" },
    { "src": "icons/icon-512x512.png","sizes": "512x512","type": "image/png", "purpose": "any maskable" }
  ],

  "screenshots": [
    { "src": "screenshots/mobile-timeline.png", "sizes": "390x844", "type": "image/png", "platform": "narrow", "label": "Timeline de procedimento com analytics preditivos" },
    { "src": "screenshots/mobile-scanner.png",  "sizes": "390x844", "type": "image/png", "platform": "narrow", "label": "Scanner de QR Code com identificação automática" },
    { "src": "screenshots/desktop-dashboard.png","sizes": "1280x720","type": "image/png","platform": "wide", "label": "Dashboard completo com métricas e insights" },
    { "src": "screenshots/desktop-analytics.png","sizes": "1280x720","type": "image/png","platform": "wide", "label": "Analytics avançados e detecção de gargalos" }
  ],

  "shortcuts": [
    {
      "name": "Novo Paciente",
      "short_name": "Escanear",
      "description": "Iniciar tracking de novo paciente rapidamente",
      "url": "/?action=scan",
      "icons": [{ "src": "icons/shortcuts/scan-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Dashboard",
      "short_name": "Analytics",
      "description": "Ver analytics e métricas em tempo real",
      "url": "/?action=dashboard",
      "icons": [{ "src": "icons/shortcuts/dashboard-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Relatórios",
      "short_name": "Relatórios",
      "description": "Acessar relatórios e insights históricos",
      "url": "/?action=reports",
      "icons": [{ "src": "icons/shortcuts/reports-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Configurações",
      "short_name": "Config",
      "description": "Configurar sistema e preferências",
      "url": "/?action=settings",
      "icons": [{ "src": "icons/shortcuts/settings-icon.png", "sizes": "96x96" }]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "edge_side_panel": { "preferred_width": 420 },

  "launch_handler": { "client_mode": "focus-existing" },

  "handle_links": "preferred",

  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".csv", ".xlsx"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/file-handler/",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],

  "protocol_handlers": [
    { "protocol": "hemoflow", "url": "/?protocol=%s" }
  ],

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],

  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "features": ["camera", "notifications", "background-sync", "offline-storage"],

  "permissions": ["camera", "notifications", "background-sync", "storage"],

  "custom": {
    "medical_device_class": "software",
    "target_audience": "healthcare_professionals",
    "data_retention_days": 2555,
    "encryption": "AES-256",
    "compliance": ["HIPAA", "LGPD"],
    "analytics_provider": "internal",
    "update_frequency": "weekly",
    "support_contact": "suporte@hemoflow.com",
    "documentation_url": "https://docs.hemoflow.com",
    "api_version": "v3.0",
    "minimum_browser_version": {
      "chrome": "88",
      "firefox": "85",
      "safari": "14",
      "edge": "88"
    }
  },

  "monetization": { "payment_pointer": "$ilp.uphold.com/hemoflow" },

  "gcm_sender_id": "103953800507",
  "gcm_user_visible_only": true,

  "splash_pages": null
}
